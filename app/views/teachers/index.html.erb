<div class="page-header center">
  <h1>Teacher Dashboard</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Course code</th>
      <th>Edit course</th>
      <th>Tools</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.description %></td>
        <td><%= c.course_code %></td>
        <td>
          <ul>
            <li> <%= link_to 'Show', c %> </li>
            <li> <%= link_to 'Edit', edit_course_path(c) %> </li>
            <li> <%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
          </ul>
        </td>
        <td>
          <ul>
            <%= render "teachers/add_assignment", course: c %>
            <%= render "teachers/add_link", course: c %>
            <li>Send an email</li>
            <%= render "teachers/add_file", course: c %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
