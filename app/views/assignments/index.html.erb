<h1 class="center">My Assignments:</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Due Date</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td>
          <% if assignment.category == "Homework" %>
            <span class="label label-default">Homework</span>
          <% elsif assignment.category == "Quiz" %>
            <span class="label label-warning">Quiz</span>
          <% elsif assignment.category == "Test" %>
            <span class="label label-danger">Test</span>
          <% elsif assignment.category == "Project" %>
            <span class="label label-info">Project</span>
          <% end %>
          <%= assignment.name %>
        </td>
        <td><%= assignment.body %></td>
        <td><%= assignment.due_date.strftime("%A, %B %d") %></td>
        <td><%= assignment.course.name %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path %>
