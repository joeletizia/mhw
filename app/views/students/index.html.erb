<div class="row">
  <div class="col-md-3">
    <div class="well">
      <h4>Upcoming Assignments:</h4>
      <hr>
      <p><a href="#"><span class="badge">3</span> Overdue</a></p>
      <p><a href="#"><span class="badge">3</span> Today</a></p>
      <p><a href="#"><span class="badge">3</span> Tomorrow</a></p>
      <p><a href="#"><span class="badge">3</span> This week</a></p>
      <p><a href="#"><span class="badge">3</span> Next 2 Weeks</a></p>
      <p><a href="#"><span class="badge">3</span> All Assignments</a></p>
    </div>

    <div class="well">
      <h4>My Courses:</h4>
      <hr>
      <% @courses.each do |course| %>
      <p>
        <%= link_to "#{course.name}", course %>
        <%= link_to leave_course_student_path(@student, course), method: :delete, data: { confirm: 'Are you sure you want to leave this course?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </p>
      <% end %>
      <%= render "students/add_course" %>
    </div>
  </div>

  <div class="col-md-9">
    <div style="margin-top:30px; text-align:center;" class="hero-unit well">
      <h1 style="font-size:60px;">Miss me?</h1><br/>
      <h3>
        You know the drill <%= current_student.name %>, just click on a link to the left.
      </h3>
      <h1>&larr;</h1>
    </div>

    <!-- to be hidden and viewed when a time period is selected -->

    <h3>This week</h3><p>Monday, June 4th, 2015 to Friday, June 8th, 2015</p>
    <p><a class="btn btn-primary" href="#"><span class="glyphicon glyphicon-plus"></span> Add Assignment</a></p>

    <div class="well">
      <h2 class="center">No work to do here! <span class="glyphicon glyphicon-sunglasses"></span></h2>
      <br>
      <p class="center">Go outside and play or something.</p>
    </div>

    <div class="panel panel-default">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th width="2%">Done</th>
          <th width="20%">Title</th>
          <th width="20%">Course</th>
          <th width="20%">Due Date</th>
          <th width="35%">Details</th>
          <th width="3%">Edit</th>
        </tr>
      </thead>

      <tbody>
        <% @student_assignments.each do |sa| %>
          <tr>
            <td>check</td>
            <td> <%= sa.assignment.name %> </td>
            <td> <%= sa.assignment.course.name %> </td>
            <td> <%= sa.assignment.due_date.strftime("%A, %B %d") %> </td>
            <td> <%= sa.assignment.body %> </td>
            <td><span class="glyphicon glyphicon-pencil"></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

  </div>
</div>
